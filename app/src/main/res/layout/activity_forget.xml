<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/login_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="26sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="账户名："/>
        <EditText
            android:id="@+id/edittext_account_forget"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:background="@layout/edittext_shape"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:hint="请输入账户名"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="新的密码："/>
        <EditText
            android:id="@+id/edittext_new_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:background="@layout/edittext_shape"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:hint="请输入新密码"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="确认密码："/>
        <EditText
            android:id="@+id/edittext_re_forget_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:background="@layout/edittext_shape"
            android:paddingLeft="10dp"
            android:textColor="#3b3c3c"
            android:hint="请确认密码"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/button_register_sure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@layout/button_shape"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:textSize="26sp"
            android:text="确认" />

        <Button
            android:id="@+id/button_forget_exit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@layout/button_shape"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:text="返回" />

    </LinearLayout>
</LinearLayout>