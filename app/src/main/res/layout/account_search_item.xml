<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/textview_search_xuhao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/textview_search_leibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/textview_search_shouzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收支"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/textview_search_jine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textview_search_fangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方式"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:id="@+id/textview_search_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"/>
    <TextView
        android:layout_marginLeft="50dp"
        android:id="@+id/textview_search_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"/>
</LinearLayout>